# Sponsor earns enough to pass 125% poverty threshold
Tbool SponsorMeetsPovThreshold(Person imm, Person sponsor) =
	wealth >= threshold

	Tnum wealth =
		Econ.AnnualIncome(sponsor) +
		Econ.TotalAssets(sponsor)		
		
	Tnum threshold =
		Tit42.Sec9902.FPG125(size, StateOfResidence(sponsor))

	Tnum size =
		Econ.HouseholdSize(sponsor) + Econ.HouseholdSize(imm)
		
		