	Wisconsin -> true
	Wyoming -> true
	else false

# Is an unincorporated U.S. territory
Tbool IsUSTerritory(Tstr jur) =
	match jur
	American Samoa -> true
	Guam -> true
	Northern Mariana Islands -> true
	Puerto Rico -> true
	U.S. Virgin Islands	-> true	
	else false

