	match jur
	Alabama -> true
	Alaska -> true
	Arizona -> true
	Arkansas -> true
	California -> true
	Colorado -> true
	Connecticut -> true
	Delaware -> true
	Florida -> true
	Georgia -> true
	Hawaii -> true
	Idaho -> true
	Illinois -> true
	Indiana -> true
	Iowa -> true
	Kansas -> true
	Kentucky -> true
	Louisiana -> true
	Maine -> true
	Maryland -> true
	Massachusetts -> true
	Michigan -> true
	Minnesota -> true
	Mississippi -> true
	Missouri -> true
	Montana -> true
	Nebraska -> true
	Nevada -> true
	New Hampshire -> true
	New Jersey -> true
	New Mexico -> true
	New York -> true
	North Carolina -> true
	North Dakota -> true
	Ohio -> true
	Oklahoma -> true
	Oregon -> true
	Pennsylvania -> true
	Rhode Island -> true
